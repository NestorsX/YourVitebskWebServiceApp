@model YourVitebskWebServiceApp.Models.BusStop

<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Удаление автобусной остановки</h2>
    </div>
    <div class="col-auto">
        <a asp-controller="BusStops" asp-action="Index">Вернуться к списку</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <tr>
            <th>ID</th>
            <th>Название</th>
        </tr>
        <tr>
            <td>@Model.BusStopId</td>
            <td>@Model.Name</td>
        </tr>
    </table>
</div>
 
<form asp-action="Delete" asp-controller="BusStops" method="post">
    <div class="mb-3">
        <input type="submit" class="btn btn-outline-danger" value="Удалить" />
    </div>
</form>