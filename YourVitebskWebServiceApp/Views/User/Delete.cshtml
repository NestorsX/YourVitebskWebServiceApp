@model YourVitebskWebServiceApp.Models.User
@{
    ViewData["Title"] = "Удаление пользователя";
}
<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Роль</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Фамилия</th>
        <th>Телефон</th>
    </tr>
    <tr>
        <td>@Model.UserId</td>
        <td>@Model.Email</td>
        <td>@ViewData["RoleName"]</td>
        <td>@Model.UserDatum.FirstName</td>
        <td>@Model.UserDatum.SecondName</td>
        <td>@Model.UserDatum.LastName</td>
        <td>@Model.UserDatum.PhoneNumber</td>
    </tr>
</table>
 
<form asp-action="Delete" asp-controller="User" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-outline-secondary" value="Удалить" />
    </div>
</form>

<div>
    <a asp-controller="User" asp-action="Index">Вернуться к списку</a>
</div>