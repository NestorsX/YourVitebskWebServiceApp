@model YourVitebskWebServiceApp.Models.Service
@{
    ViewData["Title"] = "Удаление сервиса";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Сервис</th>
    </tr>
    <tr>
        <td>@Model.ServiceId</td>
        <td>@Model.Name</td>
    </tr>
</table>
 
<form asp-action="Delete" asp-controller="Service" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-outline-secondary" value="Удалить" />
    </div>
</form>

<div>
    <a asp-controller="Service" asp-action="Index">Вернуться к списку</a>
</div>