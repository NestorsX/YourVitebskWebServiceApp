@model YourVitebskWebServiceApp.Models.Role
 
<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Добавление роли</h2>
        <div class="form-text"><i>*</i> - обязательные поля</div>
    </div>
    <div class="col-auto">
        <a asp-controller="Roles" asp-action="Index">Вернуться к списку</a>
    </div>
</div>
 
<form asp-action="Create" asp-controller="Roles" method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Роль<i>*</i></label>
            <input type="text" asp-for="Name" class="form-control form-control-sm" />
            <span class="badge bg-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>