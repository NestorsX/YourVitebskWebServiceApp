@model YourVitebskWebServiceApp.Models.BusShedule

<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Удаление расписания</h2>
    </div>
    <div class="col-auto">
        <a asp-controller="BusShedules" asp-action="Index">Вернуться к списку</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <tr>
            <th>ID</th>
            <th>Автобус</th>
            <th>Номер маршрута</th>
            <th>Номер остановки</th>
            <th>Остановка</th>
            <th>Расписание рабочего дня</th>
            <th>Расписание выходного дня</th>
        </tr>
        <tr>
            <td>@Model.BusSheduleId</td>
            <td>Автобус №@ViewData["BusNumber"]</td>
            <td>@Model.BusRoute</td>
            <td>@Model.BusStopNumber</td>
            <td>@ViewData["BusStopName"]</td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.WorkDayShedule</span>
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 300px;">@Model.DayOffShedule</span>
            </td>
        </tr>
    </table>
</div>
 
<form asp-action="Delete" asp-controller="BusShedules" method="post">
    <div class="mb-3">
        <input type="submit" class="btn btn-outline-danger" value="Удалить" />
    </div>
</form>