@model YourVitebskWebServiceApp.Models.PosterType

<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Редактирование типа искусства</h2>
        <div class="form-text"><i>*</i> - обязательные поля</div>
    </div>
    <div class="col-auto">
        <a asp-controller="PosterTypes" asp-action="Index">Вернуться к списку</a>
    </div>
</div>

<form asp-action="Edit" asp-controller="PosterTypes" method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="PosterTypeId" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Тип искусства<i>*</i></label>
            <input type="text" asp-for="Name" class="form-control form-control-sm" />
            <span class="badge bg-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
 
 