@model YourVitebskWebServiceApp.Models.User

<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Редактирование пользователя</h2>
        <div class="form-text"><i>*</i> - обязательные поля</div>
    </div>
    <div class="col-auto">
        <a asp-controller="Users" asp-action="Index">Вернуться к списку</a>
    </div>
</div>
 
<form asp-action="Edit" asp-controller="Users" method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="UserId" />
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email<i>*</i></label>
            <input type="email" asp-for="Email" class="form-control form-control-sm" placeholder="example@mail.com" />
            <span class="badge bg-danger" asp-validation-for="Email"></span>
        </div>
        @*<div class="mb-3">
            <label asp-for="Password" class="form-label">Пароль<i>*</i></label>
            <input type="text" asp-for="Password" class="form-control form-control-sm" aria-describedby="passwordNotify" />
            <div id="passwordNotify" class="form-text">Пароль должен быть не короче 6 символов. Если вы не хотите изменять пароль, оставьте поле пустым</div>
            <span class="badge bg-danger" asp-validation-for="Password"></span>
        </div>*@
        <div class="mb-3">
            <label asp-for="RoleId" class="form-label">Роль<i>*</i></label>
            <select asp-for="RoleId" class="form-control form-control-sm" >
                <option value="0">Выберите роль</option>
                @foreach (Role role in ViewBag.Roles)
                {
                    @if ((int)ViewData["RoleId"] == role.RoleId)
                    {
                        <option value="@role.RoleId" selected>@role.Name</option>
                    }
                    else
                    {
                        <option value="@role.RoleId">@role.Name</option>
                    }
                }
            </select>
            <span class="badge bg-danger" asp-validation-for="RoleId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserDatum.FirstName" class="form-label">Имя<i>*</i></label>
            <input type="text" asp-for="UserDatum.FirstName" class="form-control form-control-sm" />
            <span class="badge bg-danger" asp-validation-for="UserDatum.FirstName"></span>

        </div>
        <div class="mb-3">
            <label asp-for="UserDatum.SecondName" class="form-label">Отчество</label>
            <input type="text" asp-for="UserDatum.SecondName" class="form-control form-control-sm" />
            <span class="badge bg-danger" asp-validation-for="UserDatum.SecondName"></span>

        </div>
        <div class="mb-3">
            <label asp-for="UserDatum.LastName" class="form-label">Фамилия<i>*</i></label>
            <input type="text" asp-for="UserDatum.LastName" class="form-control form-control-sm" />
            <span class="badge bg-danger" asp-validation-for="UserDatum.LastName"></span>

        </div>
        <div class="mb-3">
            <label asp-for="UserDatum.PhoneNumber" class="form-label">Телефон</label>
            <input type="text" asp-for="UserDatum.PhoneNumber" class="form-control form-control-sm" placeholder="+375(__)___-__-__" id="Phone"/>
            <span class="badge bg-danger" asp-validation-for="UserDatum.PhoneNumber"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/plugins/jquery.maskedinput.js"></script>
<script type="text/javascript">
    $("#Phone").mask("+375(99)999-99-99");
</script>