@model YourVitebskWebServiceApp.ViewModels.UserViewModel

<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Удаление пользователя</h2>
    </div>
    <div class="col-auto">
        <a asp-controller="Users" asp-action="Index">Вернуться к списку</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Роль</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Телефон</th>
            <th>Видимость</th>
        </tr>
        <tr>
            <td>@Model.UserId</td>
            <td>@Model.Email</td>
            <td>@Model.Role</td>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.PhoneNumber</td>
            @if (Model.IsVisible)
                {
                    <td>Да</td>
                }
                else
                {
                    <td>Нет</td>
                }
        </tr>
    </table>
</div>
 
<form asp-action="Delete" asp-controller="Users" method="post">
    <div class="mb-3">
        <input type="submit" class="btn btn-outline-danger" value="Удалить" />
    </div>
</form>