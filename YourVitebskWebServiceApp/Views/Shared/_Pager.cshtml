@model YourVitebskWebServiceApp.Models.Pager

<div class="container">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage - 1 > Model.StartPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">&lt;</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.StartPage)">@(Model.StartPage)</a>
            </li>
            <li class="page-item">
                ...
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">@(Model.CurrentPage - 1)</a>
            </li>
        }
        else if (Model.CurrentPage - 1 == Model.StartPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">&lt;</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">@(Model.CurrentPage - 1)</a>
            </li>
        }

        <li class="page-item active">
            <a class="page-link" asp-action="Index" asp-route-page="@Model.CurrentPage">@Model.CurrentPage</a>
        </li>

        @if (Model.CurrentPage + 1 == Model.EndPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">@(Model.CurrentPage + 1)</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">&gt;</a>
            </li>
        }
        else if (Model.CurrentPage + 1 < Model.EndPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">@(Model.CurrentPage + 1)</a>
            </li>
            <li class="page-item">
                ...
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.EndPage)">@(Model.EndPage)</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">&gt;</a>
            </li>
        }
    </ul>
</div>