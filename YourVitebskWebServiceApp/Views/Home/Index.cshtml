                            </div>
                            <div class="form-check-inline form-switch">
                                <input type="checkbox" asp-for="VacanciesUpdate" id="VacanciesUpdate" disabled class="form-check-input" />
                                <label asp-for="VacanciesUpdate" class="form-label">Изменение</label>
