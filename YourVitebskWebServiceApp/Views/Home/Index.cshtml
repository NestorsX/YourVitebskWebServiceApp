                            </div>
                            <div class="form-check-inline form-switch">
                                <input type="checkbox" asp-for="CommentsDelete" id="CommentsDelete" disabled class="form-check-input" />
                                <label asp-for="CommentsDelete" class="form-label">Удаление</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white text-center text-uppercase">
                    <b>пользователей:</b>
                </div>
                <div class="card-body text-center">
                    <h2 class="card-title">@Model.TotalUsers</h2>
                </div>
                <a asp-controller="Users" asp-action="Index" class="btn-outline-danger text-decoration-none">
                    <div class="card-footer">
                        Подробнее...
                    </div>
                </a>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white text-center text-uppercase">
                    <b>заведений:</b>
                </div>
                <div class="card-body text-center">
                    <h2 class="card-title">@Model.TotalCafes</h2>
                </div>
                <a asp-controller="Cafes" asp-action="Index" class="btn-outline-danger text-decoration-none">
                    <div class="card-footer">
                        Подробнее...
                    </div>
                </a>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white text-center text-uppercase">
                    <b>Всего афиш:</b>
                </div>
                <div class="card-body text-center">
                    <h2 class="card-title">@Model.TotalPosters</h2>
                </div>
                <a asp-controller="Posters" asp-action="Index" class="btn-outline-danger text-decoration-none">
                    <div class="card-footer">
                        Подробнее...
                    </div>
                </a>
