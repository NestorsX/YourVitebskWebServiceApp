@model YourVitebskWebServiceApp.Models.Bus
 
<div class="row mb-3">
    <div class="col-auto me-auto">
        <h2>Добавление автобуса</h2>
        <div class="form-text"><i>*</i> - обязательные поля</div>
    </div>
    <div class="col-auto">
        <a asp-controller="Buses" asp-action="Index">Вернуться к списку</a>
    </div>
</div>
 
<form asp-action="Create" asp-controller="Buses" method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3">
            <label asp-for="Number" class="form-label">Номер<i>*</i></label>
            <input type="text" asp-for="Number" class="form-control form-control-sm" placeholder="15A" required />
            <span class="badge bg-danger" asp-validation-for="Number"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>